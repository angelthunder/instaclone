<% if user_signed_in? %>
  <%= turbo_frame_tag "#{dom_id(post)}-likes" do %>
    <% if liked?(post) %>
      <%= render partial: "likes/unlike", locals: { likable: post } %>
    <% else %>
      <%= render partial: "likes/like", locals: { likable: post } %>
    <% end %>
  <% end %>
<% else %>
  <%= render partial: "likes/like", locals: { likable: post } %>
<% end %>
