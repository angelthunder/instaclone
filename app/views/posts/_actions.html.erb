<% if user_signed_in? %>
  <%= turbo_frame_tag "#{dom_id(post)}-likes" do %>
    <% if liked?(post) %>
      <%= render partial: "posts/actions/unlike", locals: { post: } %>
    <% else %>
      <%= render partial: "posts/actions/like", locals: { post: } %>
    <% end %>
  <% end %>
<% else %>
  <%= render partial: "posts/actions/like", locals: { post: } %>
<% end %>
