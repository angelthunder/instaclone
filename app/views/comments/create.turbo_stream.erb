<%= turbo_stream.update "#{dom_id(@post)}-comments-list" do %>
  <%= render partial: "list", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update "#{dom_id(@post)}-comment-form" do %>
  <%= render partial: "form",
    locals: { post: @post, comment: Comment.new } %>
<% end %>

<%= turbo_stream.update "#{dom_id(@post)}-comments-count" do %>
  <%= render partial: "posts/comments/count", locals: { post: @post } %>
<% end %>
